{
  "manifest_version": 2,
  "name": "LET-Ignore",
  "description": "This extension allows you to ignore annoying let users",
  "version": "0.1",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_icon": "icon38.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.lowendtalk.com/*"
      ],
      "js": [
        "jquery-1.12.0.min.js",
        "ignore.js"
      ]
    }
  ],
  "permissions": [
    "https://www.lowendtalk.com/",
    "declarativeContent",
    "contextMenus",
    "storage"
  ],
  "icons":{
    "38":"icon38.png",
    "48":"icon48.png",
    "128":"icon128.png"
  }
}